{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Pluto",
            "command": "/usr/bin/make",
            "args": ["build"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Build Test",
            "command": "/usr/bin/make",
            "args": ["build_test"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}
